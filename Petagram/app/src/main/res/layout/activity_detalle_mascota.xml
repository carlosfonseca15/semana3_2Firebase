<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleMascota"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/tvMascotaDetalle"
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgFotoDetalle"
                android:layout_width="@dimen/card_img_det"
                android:layout_height="@dimen/card_img_det"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rex"
                android:transitionName="@string/transicion_foto"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvCAlificacionDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pcal"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/imgBone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/dog_bone_yellow" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>